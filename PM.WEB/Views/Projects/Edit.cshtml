@model ProjectModel
@using PM.DATA.Enums
@using PM.WEB.Extensions

<h2>Edit Project</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" /> <!-- Hidden field for the project ID -->

    <div>
        <label>Title</label>
        <input asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div>
        <label>Description</label>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div>
        <label>Start Date</label>
        <input asp-for="StartDate" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div>
        <label>End Date</label>
        <input asp-for="EndDate" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div>
        <label>Status</label>
        <select asp-for="Status" asp-items="Html.EnumToSelectList<PM.DATA.Enums.ProjectStatus, ProjectModel>()">
            <option value="">Select Status</option> <!-- Optional: prompt option -->
        </select>



        <span asp-validation-for="Status" class="text-danger"></span>
    </div>


    <button type="submit">Update</button>
</form>

<a asp-action="Index">Back to Projects</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    form {
        max-width: 500px; /* Limit form width */
        margin: 0 auto; /* Center the form */
        padding: 20px;
        border: 1px solid #ddd; /* Light border around the form */
        border-radius: 5px; /* Rounded corners */
        background-color: #f9f9f9; /* Light background for form */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    }

    div {
        margin-bottom: 15px; /* Space between fields */
    }

    label {
        display: block; /* Block display for labels */
        margin-bottom: 5px; /* Space between label and input */
    }

    input[type="text"], input[type="date"], select {
        width: 100%; /* Full width for inputs */
        padding: 10px; /* Inner padding */
        border: 1px solid #ccc; /* Light border for inputs */
        border-radius: 4px; /* Slightly rounded corners */
    }

        input[type="text"]:focus, input[type="date"]:focus, select:focus {
            border-color: #dc3545; /* Change border color on focus */
            outline: none; /* Remove outline */
        }

    button[type="submit"] {
        background-color: #dc3545; /* Button background color */
        color: white; /* White button text */
        border: none;
        border-radius: 5px;
        padding: 10px 20px; /* Button padding */
        cursor: pointer;
        width: 100%; /* Full width button */
    }

        button[type="submit"]:hover {
            background-color: #c82333; /* Darker shade on hover */
        }

    /* Optional: Add a box shadow for a subtle 3D effect */
    form {
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

</style>